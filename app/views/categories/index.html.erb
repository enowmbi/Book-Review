<h1>Categories</h1>

<table class="table table-compressed">
  <thead>
    <tr>
      <th> Name </th> 
      <th> Description </th>
      <th> No. of Books </th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category|   %>
      <tr> 
        <td><%= link_to(category.name,category_path(category)) %></td>
        <td><%= category.description %></td>
        <td><span class="badge badge-pill badge-primary"><%= category.books_count %></span></td>
        <tr>
        <% end %>
  </tbody>
</table>
<div class="row">
    <p class="text-right"> <%= will_paginate @posts %></p>
  </div>
  <p></p>
<% if user_signed_in? && current_user.admin? == true %>
  <%= link_to "Add New Category",new_category_path,class: "btn btn-outline-primary" %>
<% end %>

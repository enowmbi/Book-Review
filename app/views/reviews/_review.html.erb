<p>
  <hr />
  <%= review.rating %>
</p>
<p>
  <%= review.comment %>
</p>

<% if user_signed_in? && review.user_id == current_user.id %>
  <%= link_to 'Edit', edit_book_review_path(review.book,review), class: "btn btn-outline-success btn-sm" %>
  <%= link_to 'Delete',book_review_path(review.book,review) ,method: :delete,data: {confirm: "Are you sure you want to delete this review ?"},class: "btn btn-outline-danger btn-sm"%>
<% end %>

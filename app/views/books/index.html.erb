<h1>Book Review</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to(book.title,book_path(book)) %> </td>
        <td><%= book.description %> </td>
        <td><%= book.author %> </td>
      </tr>
      <% end %>
      </tbody>
  </table>

  <% if user_signed_in? %>
    <%= link_to("Add New Book",new_book_path,class: "btn btn-outline-primary") %>
    <% end %>

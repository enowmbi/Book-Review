<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@book.thumbnail,class: "img img-thumbnail img-responsive") if @book.image.attached?  %>
</p>


<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Description </strong>
  <%= @book.description %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Category:</strong>
  <%= @book.category.name %>
</p>
<% if user_signed_in? && @book.user_id == current_user.id %>
  <%= link_to 'Edit', edit_book_path %>
  | 
  <%= link_to 'Destroy', @book,method: :delete,data: {confirm: "Are you sure you want to delete #{@book.title} ?"}  %>

<% end %>
